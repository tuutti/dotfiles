configuration{
    modi: "drun";
    width: 40;
    columns: 1;
    lines: 5;
    show-icons: true;
    icon-theme: "gruvbox";
    terminal: "st";
    drun-display-format: "{icon} {name}";
    display-drun: " ï„µ ";
    location: 0;
    separator-style: "solid";
    disable-history: false;
    hide-scrollbar: true;
}

* {
    background-color:  #282828;
    border-color: #504945;
    text-color: #ebdbb2;
    font: "Fira Mono 12";
    separator-color: @border-color;
    show-icons: true;
}

window {
    padding: 20px;
    height: 320px;
    border: 3px;
    font: "Fira Mono 12";
    border-color: @border-color;
}

mainbox {
    padding: 5px;
    border-radius: 13px;
}

inputbar {
    children: [prompt,entry];
}

prompt {
    background-color: #504945;
    padding: 5px 5px 0px;
    text-color: @background-color;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 5px;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    columns: 2;
}

element {
    padding: 5px;
}

element-icon {
size: 25px;
}

element selected {
    background-color: #504945  ;
}

element urgent {
    background-color: #BF616A;
    text-color: @background-color;
}

element active {
    background-color: #EBCB8B;
    text-color: @background-color;
}
