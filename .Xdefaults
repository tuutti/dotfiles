! special
*.cursorColor:  #d0d0d0
*.foreground:   #C5C8C6
*.background:   #1b2024

URxvt.scrollBar: false


!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

! -- Fonts -- !
URxvt.font:xft:Ubuntu Mono:medium
URxvt.boldFont:xft:Ubuntu Mono:bold
URxvt.letterSpace: -1

Xcursor.theme: Adwaita
Xcursor.size:  16       !  32, 48 or 64 may also be good values
