!-- https://github.com/muennich/urxvt-perls parcellite and xclip are required --!
URxvt.iso14755 : false
URxvt.perl-ext-common: default,matcher,keyboard-select,url-select,clipboard

URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

! Ctrl+shift+c = copy
URxvt.keysym.C-C: perl:clipboard:copy
! Ctrl+shift+v = paste
URxvt.keysym.C-V: perl:clipboard:paste
! Alt+u = select url
! j/k:      Select next downward/upward URL (also with arrow keys)
! g/G:      Select first/last URL (also with home/end key)
! o/Return: Open selected URL in browser, Return: deactivate afterwards
! y:        Copy (yank) selected URL and deactivate selection mode
! q/Escape: Deactivate URL selection mode
URxvt.keysym.M-u: perl:url-select:select_next

URxvt.url-select.launcher: firefox
URxvt.internalBorder:10

! Alt+escape = keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! Fix ctrl + arrow keys for vim.
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

!URxvt*keysym.Home: \033[1~
!URxvt*keysym.End: \033[4~

!URxvt*termName: xterm-256color
! URxvt*termName: rxvt-unicode
URxvt*colorBD: #ffffff
URxvt*colorIT: #a761c2
URxvt*colorUL: #6d9cbe
URxvt*underlineColor: #435D75
URxvt*cursorColor: #FFA7DA

URxvt*highlightColor: #435D75
URxvt*highlightTextColor: #90EE90

URxvt.colorBD: #CFCFCF
URxvt.colorUL: #A0A0A0
URxvt.colorIT: #686868

*background: #2a3035
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

! special
*.cursorColor:  #d0d0d0
URxvt.depth: 32

URxvt.scrollBar: false


!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

! -- Fonts -- !
URxvt.font:xft:Fira Mono:medium:size=11
URxvt.boldFont:xft:Fira Mono:bold:size=11
URxvt.letterSpace: -1

Xcursor.theme: Adwaita
Xcursor.size:  16       !  32, 48 or 64 may also be good values
